@page
@model FinalProject.Pages.EditGoalModel

@{
    ViewData["Title"] = "Edit Goal";
}

<h1>Edit Goal</h1>

<!-- Edit form for the specific goal -->
<form method="post">
    <input type="hidden" asp-for="Goal.GoalID" />
    <div class="form-group">
        <label asp-for="Goal.GoalName" class="control-label"></label>
        <input asp-for="Goal.GoalName" class="form-control" />
        <span asp-validation-for="Goal.GoalName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Goal.WeightLbs" class="control-label"></label>
        <input asp-for="Goal.WeightLbs" class="form-control" />
        <span asp-validation-for="Goal.WeightLbs" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<a asp-page="./Index">Back to List</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}