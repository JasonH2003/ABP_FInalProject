@page
@model FinalProject.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Full_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Full_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Birth_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Birth_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.HeightFT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.HeightFT)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.BodyWeightLbs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.BodyWeightLbs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.BMI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.BMI)
        </dd>
    </dl>
    <!-- Display user goals with edit button -->
<h4>Goals</h4>
<table class="table">
    <thead>
        <tr>
            <th>Goal Name</th>
            <th>Weight (lbs)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goal in Model.User.Goals)
        {
            <tr>
                <td>@Html.DisplayFor(modelgoal => goal.GoalName)</td>
                <td>@Html.DisplayFor(modelgoal => goal.WeightLbs)</td>
                <td>
                    <form method="post" asp-page="./EditGoal" asp-route-goalId="@goal.GoalID">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    </table>

    <!-- Display user maxes -->
    <h4>Maxes</h4>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.User.Maxes[0].MaxName)</th>
                <th>@Html.DisplayNameFor(model => model.User.Maxes[0].WeightLbs)</</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var max in Model.User.Maxes)
            {
                <tr>
                    <td>@Html.DisplayFor(modelmax => max.MaxName)</td>
                    <td>@Html.DisplayFor(modelmax => max.WeightLbs)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.UserID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
